rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function ownsResource() {
      return request.auth != null && resource.data.userId == request.auth.uid;
    }

    function willOwnResource() {
      return request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }

    match /subjects/{subjectId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /pdfs/{pdfId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    match /notes/{noteId} {
      allow read: if ownsResource();
      allow create: if willOwnResource();
      allow update, delete: if ownsResource();
    }

    match /mockTests/{testId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /users/{userId}/mockTests/{testId} {
      allow read, write: if isOwner(userId);
    }

    match /pyqSubjects/{subjectId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    match /pyqs/{pyqId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /pdfs/{pdfId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    match /users/{userId}/mockTestAttempts/{attemptId} {
      allow read, write: if isOwner(userId);
    }

    match /user_pyq_sessions/{sessionId} {
      allow read: if ownsResource();
      allow create: if willOwnResource();
      allow update, delete: if ownsResource();
    }

    match /user_pyq_progress/{progressId} {
      allow read, write: if isOwner(progressId);
    }

    match /leaderboard/{entryId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /adminNotifications/{notificationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /ssb_ppdt_pictures/{pictureId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /ssb_tat_pictures/{pictureId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /ssb_wat_words/{wordId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /ssb_srt_situations/{situationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /ssb_test_results/{resultId} {
      allow read: if ownsResource();
      allow create: if willOwnResource();
      allow update, delete: if ownsResource();
    }

    match /tasks/{taskId} {
      allow read: if ownsResource();
      allow create: if willOwnResource();
      allow update, delete: if ownsResource();
    }

    match /userLogins/{loginId} {
      allow read: if ownsResource();
      allow create: if willOwnResource();
      allow update, delete: if ownsResource();
    }

    match /users/{userId}/pyqAttempts/{attemptId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/pyqActivities/{activityId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/mockTestActivities/{activityId} {
      allow read, write: if isOwner(userId);
    }

    match /userProfiles/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /enliftSuccessStories/{storyId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /blogs/{blogId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /programs/{programId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
